<div class="album" ref="/album/<%= album.id %>">
  <% if (typeof(album.thumbnailUri) !== 'undefined' && album.thumbnailUri != null) { %>
    <img src="#{album.thumbnailUri}" alt="" />
  <% } else { %>
    <img src="./no_image_placeholder.png" alt="" />
  <% } %>
  <div class="title">
    <h1> <%= album.name %> </h1>
      <div id="heart-button" class="heart"></div>
  </div>
  <div class="title" style="margin-top: 50px">
    <div>
      <p> <%= album.author %> </p>
      <p> <%= album.creationDate %> </p>
    </div>
    <p> Like Count: <%= album.likeCount %> </p>
  </div>
</div>
