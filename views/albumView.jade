.album(ref="/album/#{album.id}")
  - if (typeof(album.thumbnailUri) !== 'undefined' && album.thumbnailUri != null) 
    img(src="#{album.thumbnailUri}", alt="")
  - else
    img(src="./no_image_placeholder.png", alt="")
  .title
    h1 #{album.name}
    .heart-button.heart
  .title(style="margin-top: 50px")
    div
      p #{album.author}
      p #{album.creationDate}
    p #{album.likeCount}